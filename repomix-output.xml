            const names = (perms || []).map(p => (typeof p === "string" ? p : p.name) || "").map(n => n.toLowerCase());
            if (!names.includes("create_exam") && !names.includes("manage_exams")) {
                MessageBox.error("Access denied. You don't have permission to create exams.");
                return;
