<mvc:View
  controllerName="exam.controller.Main"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
>
  <!-- The sap.m.Page is the primary container for your entire screen. -->
  <!-- It should be the direct child of the mvc:View. -->
  <!-- We apply the 'login-page' class to the Page for overall styling. -->
  <!-- 'enableScrolling="false"' is good for a fixed, centered layout. -->
  <Page
    showHeader="false"
    class="login-page"
    enableScrolling="false"
  >
    <content>
      <!-- This VBox is responsible for centering the actual login content. -->
      <!-- It will take up the full available space within the Page's content area. -->
      <VBox
        class="login-content-wrapper"
        alignItems="Center"
        justifyContent="Center"
        width="100%"
        height="100%"
      >
        <!-- This inner VBox will be your actual login panel, which we'll give a max-width. -->
        <VBox
          class="login-panel-content"
          alignItems="Center"
          justifyContent="Center"
        >
          <Title text="Secure Examination System" level="H1" class="login-title" />
          <Text text="Please select your role" class="login-subtitle" />

          <HBox class="avatar-carousel" alignItems="Center" justifyContent="Center">
            <Button icon="sap-icon://nav-back" press="onPreviousAvatar" class="nav-arrow" />

            <VBox alignItems="Center" class="avatar-section">
              <Image src="{/selected/avatar}" width="100px" height="100px" class="avatar-image" />
              <Text text="{/selected/role}" class="role-label" />
            </VBox>

            <Button icon="sap-icon://nav-forward" press="onNextAvatar" class="nav-arrow" />
          </HBox>

          <Button text="Continue" press="onLoginContinue" class="login-continue-btn" />
        </VBox>
      </VBox>
    </content>
  </Page>
</mvc:View>