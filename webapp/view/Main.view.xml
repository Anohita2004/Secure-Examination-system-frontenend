<mvc:View
  controllerName="exam.controller.Main"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
>
  <Page showHeader="false">
    <content>
      <FlexBox
        direction="Row"
        justifyContent="Center"
        alignItems="Stretch"
        class="login-container"
      >
        <!-- Left Image Panel -->
        <VBox class="image-panel">
          <Image
            src="images/officebg.jpg"
            alt="Background"
            width="100%"
            height="100%"
            decorative="true"
          />
        </VBox>

        <!-- Right Login Card -->
        <VBox class="login-panel" justifyContent="Center" alignItems="Center">
          <Title text="Welcome!" level="H1" class="welcome-title"/>
          <Text text="Please choose how you'd like to login" class="welcome-subtext"/>
          <Button text="Login as Admin" press="onAdminLogin" class="login-button" />
          <Button text="Login as Employee" press="onEmployeeLogin" class="login-button" />
        </VBox>
      </FlexBox>
    </content>
  </Page>
</mvc:View>
