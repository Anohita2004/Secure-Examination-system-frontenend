<mvc:View
  controllerName="exam.controller.Main"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
>
  <Page showHeader="false" class="login-page">
    <content>
      <VBox class="login-container" alignItems="Center" justifyContent="Center">
        <Title text="Welcome!" level="H1" class="login-title" />
        <Text text="Please select your role" class="login-subtitle" />

        <HBox class="avatar-carousel" alignItems="Center" justifyContent="Center">
          <Button icon="sap-icon://nav-back" press="onPreviousAvatar" class="nav-arrow" />
          
          <VBox alignItems="Center" class="avatar-section">
            <Image src="{/selected/avatar}" width="100px" height="100px" class="avatar-image" />
            <Text text="{/selected/role}" class="role-label" />
          </VBox>

          <Button icon="sap-icon://nav-forward" press="onNextAvatar" class="nav-arrow" />
        </HBox>

        <Button text="Continue" press="onLoginContinue" class="login-continue-btn" />
      </VBox>
    </content>
  </Page>
</mvc:View>
